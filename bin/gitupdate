#!/usr/bin/env perl
use strict;
use autodie;
use File::Spec::Functions;


my @cmd  = qw< git pull --quiet >;
my $root = "/home/apache/repositories";

opendir my $dh, $root;
my @repos = readdir $dh;
closedir $dh;

for my $repo (@repos) {
    my $dir = catdir($root, $repo);
    next unless -d catdir($dir, ".git");
    chdir $dir;
    my $r = system @cmd;
    warn "error while running '@cmd' in " if $r != 0;
}

